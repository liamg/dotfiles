(defwidget recess [?class ?visible ?spacing ?hexpand ?halign]
    (box :class "${class} recess"
         :orientation "h"
		 :spacing {spacing ?: 10}
		 :hexpand {hexpand ?: true}
         :halign {halign ?: "center"}
         :space-evenly false
         :visible {visible ?: true}
    (children))
)

